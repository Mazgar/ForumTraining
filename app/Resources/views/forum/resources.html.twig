    <div class="headline">
      <h2>Making</h2>
      <p>Tout le savoir faire des Making RPG</p>
    </div>

    {% for topicRes in topicRes %}
    <div class="block">
      <h3><a href="/presentation/{{topicRes.id}}">{{ topicRes.Subject }}</a></h3>
